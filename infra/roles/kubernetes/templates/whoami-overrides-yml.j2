# whoami_helm_version: {{ whoami_helm_version }}
service:
  type: LoadBalancer
  loadBalancerIP: {{ whoami_load_balancer_ip }}

ingress:
  enabled: true
  hosts:
  - host: whoami.{{ whoami_tld }}
    paths:
      - /  
  - host: whoami.whoami.{{ whoami_cluster_name }}.{{ whoami_tld }}
    paths:
      - /
